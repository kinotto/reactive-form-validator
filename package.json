{
  "name": "reactive-form-validator",
  "version": "1.0.1",
  "description": "form input validator following a reactive approach with rxjs 5",
  "main": "./build/bundle.js",
  "author": "karim",
  "scripts": {
    "start": "npm-run-all --parallel watch:server watch:build ",
    "watch:server": "nodemon \"./build/bundle.js\" --watch \"./build\" ",
    "watch:build": "webpack --watch",
    "build": "webpack ./webpack.config.js",
    "test": "mocha --require ts-node/register src/spec/test.ts",
    "start:examples": "node ./examples/server"
  },
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "express": "^4.16.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "sinon": "^4.1.2",
    "supertest": "^3.0.0",
    "ts-loader": "^3.0.5",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0",
    "@types/requirejs": "^2.1.31",
    "requirejs": "^2.3.5"
  },
  "dependencies": {
    "rxjs": "^5.5.3"
  }
}
